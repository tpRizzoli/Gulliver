<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Aggiunto padding per bordi -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />


    <!-- Aggiunto il bordo con colore e spessore personalizzati -->
    <stroke
        android:color="@color/black"
        android:width="1dp" />

    <!-- Aggiunto il bordo arrotondato -->
    <corners android:radius="100dp" />

</shape>
