<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="left"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Quale nome vuoi dare all'itinerario? "/>

    <EditText
        android:id="@+id/inputDataPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserisci qui il nome..."
        android:layout_marginTop="5dp"
        android:textColorHint="@color/black"
        android:textColor="#000000"
        android:background="@drawable/custom_input"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/logoapp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <!-- passare le attività che ha scelto l'utente -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_background">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingStart="15dp"
            android:src="@drawable/citta"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:text="Attività"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/img1"
            android:text="Secondary Text"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnConferma"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_style_button"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Conferma"
            android:backgroundTint="@color/azzurro"/>

        <Button
            android:id="@+id/btnAnnulla"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_style_button"
            android:backgroundTint="@color/azzurro"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Annulla"/>

    </LinearLayout>
</LinearLayout>
